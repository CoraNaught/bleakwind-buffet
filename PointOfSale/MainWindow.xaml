<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="Bleakwind Buffet Point Of Sale" TextBlock.TextAlignment="Center" Height="450" Width="800">
    <Grid>
        <Border Name="containerBorder" Margin="10,10,220,10" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.137"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.642"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border Name="order" MaxWidth="2" HorizontalAlignment="Right" Margin="0,10,10,10" MinWidth="200" Width="190"/>
    </Grid>
</Window>
