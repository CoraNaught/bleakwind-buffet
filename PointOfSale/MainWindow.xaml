<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="Bleakwind Buffet Point Of Sale" TextBlock.TextAlignment="Center" Height="450" Width="800">
    <Grid  x:Name="mainWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Name="containerBorder" Grid.Column="0" Grid.RowSpan="3"/>
        <Border Name="order" Grid.Column="1"/>
        <Button Name="cancelButton" Grid.Column="1" Grid.Row="1" FontSize="20" Click="cancelButton_Click">Cancel</Button>
        <Button Name="completeButton" Grid.Column="1" Grid.Row="2" FontSize="20" Click="completeButton_Click">Complete Order</Button>
        
    </Grid>
</Window>
